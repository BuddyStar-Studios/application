<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:greendroid="http://schemas.android.com/apk/res/com.pixellostudio.newyaam"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    style="@style/Blue"
    >
    


	<greendroid.widget.SegmentedBar
        android:id="@+id/segmentedBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    style="@style/Title"
    android:text="@string/recommendedapps"
    android:paddingTop="5px"/>

<ListView android:layout_height="wrap_content" android:cacheColorHint="#00000000"
android:id="@+id/ListViewRecommended" android:layout_width="fill_parent"></ListView>

</LinearLayout>